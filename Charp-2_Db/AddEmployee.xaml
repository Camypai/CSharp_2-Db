<Window x:Class="Charp_2_Db.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Добавить сотрудника" Height="200" Width="200">
    <Grid>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBox Name="FirstName">Имя</TextBox>
            <TextBox Name="LastName">Фамилия</TextBox>
            <TextBox Name="MiddleName">Отчество</TextBox>
            <TextBox Name="Position">Должность</TextBox>
            <TextBox Name="Age">Возраст</TextBox>
            <TextBox Name="Experience">Опыт</TextBox>
            <ComboBox Name="ComboBox" SelectedValuePath="Id" DisplayMemberPath="Name" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button Name="OkButton" IsDefault="True" Grid.Column="0" Click="OkButton_OnClick">Ok</Button>
                <Button Name="CancelButton" IsCancel="True" Grid.Column="1" Click="CancelButton_OnClick">Cancel</Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>